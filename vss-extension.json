{
    "manifestVersion": 1,
    "id": "sec1-api-security-task",
    "name": "Sec1 API Security",
    "version": "1.4.0",
    "publisher": "Sec1",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Sec1 API Security Vulnerability Scanner",
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "public": false,
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "files": [
        {
            "path": "buildandreleasetask"
        }
    ],
    "contributions": [
        {
            "id": "custom-build-release-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildandreleasetask"
            }
        },
        {
            "id": "build-contribution-task-dependent-section",
            "type": "ms.vss-build-web.build-results-section",
            "description": "A section depending on Sec1 API Security contributing to our own new tab and also to existing build 'summary' tab",
            "targets": [
                ".build-info-tab",
                "ms.vss-build-web.build-results-summary-tab"
            ],
            "properties": {
                 "name": "Sec1 API Security",
                 "uri": "buildandreleasetask/summary-tab.html",
                 "order": 20,
                 "height": 30,
                 "supportsTasks": ["a1b2c3d4-e5f6-7890-abcd-ef1234567890"]
            }
        }
    ]
}